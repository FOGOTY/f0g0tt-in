

local TweenService = game:GetService("TweenService")
local Players = game:GetService("Players")


local screenGui = Instance.new("ScreenGui")
screenGui.Name = "FoggySoftworksIntro"
screenGui.IgnoreGuiInset = true
screenGui.Parent = Players.LocalPlayer:WaitForChild("PlayerGui")


local background = Instance.new("Frame")
background.Size = UDim2.new(1, 0, 1, 0)
background.Position = UDim2.new(0, 0, 0, 0)
background.BackgroundColor3 = Color3.fromRGB(20, 20, 20) -- Dark background
background.BackgroundTransparency = 1 -- Start fully transparent
background.Parent = screenGui


local textLabel = Instance.new("TextLabel")
textLabel.Size = UDim2.new(0.5, 0, 0.2, 0)
textLabel.Position = UDim2.new(0.25, 0, 0.4, 0)
textLabel.BackgroundTransparency = 1
textLabel.Text = "Foggy Softworks"
textLabel.TextColor3 = Color3.fromRGB(255, 255, 255) -- White text
textLabel.TextTransparency = 1 -- Start fully transparent
textLabel.TextScaled = true
textLabel.Font = Enum.Font.GothamBlack -- Cool, bold font
textLabel.Parent = screenGui


local backgroundFadeIn = TweenInfo.new(
    0.5, -- Duration
    Enum.EasingStyle.Quad,
    Enum.EasingDirection.In
)
local backgroundTweenIn = TweenService:Create(
    background,
    backgroundFadeIn,
    {BackgroundTransparency = 0.3} -- Slightly transparent background
)
backgroundTweenIn:Play()


local textFadeIn = TweenInfo.new(
    0.7, -- Duration
    Enum.EasingStyle.Sine,
    Enum.EasingDirection.InOut
)
local textTweenIn = TweenService:Create(
    textLabel,
    textFadeIn,
    {TextTransparency = 0, Size = UDim2.new(0.6, 0, 0.25, 0)} -- Fade in and slightly scale up
)
textTweenIn:Play()


wait(2)


local backgroundFadeOut = TweenInfo.new(
    0.5,
    Enum.EasingStyle.Quad,
    Enum.EasingDirection.Out
)
local backgroundTweenOut = TweenService:Create(
    background,
    backgroundFadeOut,
    {BackgroundTransparency = 1}
)
backgroundTweenOut:Play()


local textFadeOut = TweenInfo.new(
    0.7,
    Enum.EasingStyle.Sine,
    Enum.EasingDirection.InOut
)
local textTweenOut = TweenService:Create(
    textLabel,
    textFadeOut,
    {TextTransparency = 1, Size = UDim2.new(0.4, 0, 0.15, 0)}
)
textTweenOut:Play()

-- Wait for animations to complete, then clean up
wait(0.7)
screenGui:Destroy()
